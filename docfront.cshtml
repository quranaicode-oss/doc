    function simplifyJsonForSave() {
        if (!documentData.json) return JSON.stringify({ Elements: [] });
        const payload = JSON.parse(JSON.stringify(documentData.json));
        payload.Direction = normalizeDirectionValue(payload.Direction) || 'ltr';

        const allowedElementKeys = {
            Paragraph: new Set(['ID', 'Type', 'Content', 'Formatting', 'StructureKey']),
            Table: new Set(['ID', 'Type', 'Content', 'StructureKey'])
        };

        const allowedFormattingKeys = new Set(['Alignment', 'Direction', 'Shading', 'algin']);
        const allowedCellKeys = new Set(['Content', 'Alignment', 'Direction', 'algin', 'TextRotation', 'GridSpan', 'rowSpan', 'VerticalMerge']);
        const allowedRowKeys = new Set(['Cells']);

        payload.Elements.forEach(element => {
            if (element.Type === "Paragraph") {
                if (element.Content && Array.isArray(element.Content)) {
                    const combinedText = element.Content.map(run => run?.Text || "").join('').trim();
                    element.Content = [{ Text: combinedText }];
                }

                if (element.Formatting && typeof element.Formatting === 'object') {
                    normalizeFormattingObject(element.Formatting);
                    const cleanedFormatting = {};
                    Object.keys(element.Formatting).forEach(key => {
                        if (allowedFormattingKeys.has(key) && element.Formatting[key] !== undefined && element.Formatting[key] !== null && element.Formatting[key] !== '') {
                            cleanedFormatting[key] = element.Formatting[key];
                        }
                    });
                    if (cleanedFormatting.Alignment && !cleanedFormatting.algin) {
                        cleanedFormatting.algin = cleanedFormatting.Alignment;
                    }
                    if (Object.keys(cleanedFormatting).length > 0) {
                        element.Formatting = cleanedFormatting;
                    } else {
                        delete element.Formatting;
                    }
                }
            } else if (element.Type === "Table") {
                element.Content?.forEach(row => {
                    if (row && Array.isArray(row.Cells)) {
                        row.Cells.forEach(cell => {
                            if (!cell) return;
                            normalizeFormattingObject(cell);
                            const fromRuns = (cell.FormattedRuns || []).map(r => r?.Text || "").join('');
                            const combinedText = (fromRuns || cell.Content || "").trim();
                            cell.Content = combinedText;
                            delete cell.FormattedRuns;

                            Object.keys(cell).forEach(key => {
                                if (!allowedCellKeys.has(key)) {
                                    delete cell[key];
                                }
                            });
                            if (!cell.Alignment) {
                                delete cell.Alignment;
                                delete cell.algin;
                            } else if (!cell.algin) {
                                cell.algin = cell.Alignment;
                            }
                            if (!cell.Direction) delete cell.Direction;
                            if (!cell.TextRotation) delete cell.TextRotation;
                            if (!cell.GridSpan || cell.GridSpan === 1) delete cell.GridSpan;
                            if (!cell.rowSpan || cell.rowSpan === 1) delete cell.rowSpan;
                            if (!cell.VerticalMerge) delete cell.VerticalMerge;
                        });
                    }
                    if (row && typeof row === 'object') {
                        Object.keys(row).forEach(key => {
                            if (!allowedRowKeys.has(key)) delete row[key];
                        });
                    }
                });
            }

            const keepKeys = allowedElementKeys[element.Type] || new Set(['ID', 'Type', 'Content', 'StructureKey']);
            Object.keys(element).forEach(key => {
                if (!keepKeys.has(key)) {
                    delete element[key];
                }
            });
        });
        return JSON.stringify(payload, null, 2);
    }

