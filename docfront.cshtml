    function displayDocumentElements() {
        const docContainer = $('#documentContent');
        docContainer.html('');
        if (!documentData?.json?.Elements) {
            docContainer.html(`<p>${t.selectFileData}</p>`);
            return;
        }
        const documentDirection = normalizeDirectionValue(documentData.json.Direction) || 'ltr';
        docContainer.css('direction', documentDirection);
        const formatRunText = (text) => {
            if (typeof text !== 'string') return '';
            const normalized = decodeHtmlEntities(text).replace(/\r\n/g, '\n').replace(/\r/g, '\n');
            return normalized
                .split('\n')
                .map(line => escapeHtml(line).replace(/\t/g, '&emsp;').replace(/ /g, '&nbsp;'))
                .join('<br>');
        };

        const renderRun = (run, elementId, runIndex) => {
            if (!run || typeof run.Text === 'undefined') return '';
            let runStyle = '';
            const f = run.Formatting || {};
            const fv = run.FormattingValues || {};
            if (f.Bold) runStyle += 'font-weight: bold;';
            if (f.Italic) runStyle += 'font-style: italic;';
            if (f.Underline) runStyle += 'text-decoration: underline;';
            if (fv.ColorValue) runStyle += `color: #${fv.ColorValue};`;
            if (fv.FontSize) runStyle += `font-size: ${parseInt(fv.FontSize) / 2}pt;`;
            if (fv.FontFamily) runStyle += `font-family: "${fv.FontFamily}";`;
            if (fv.ShadingValue) runStyle += `background-color: #${fv.ShadingValue};`;

            if (run.Text.includes('☐') || run.Text.includes('☑')) {
                const textParts = run.Text.split(/(☐|☑)/).filter(part => part);
                return textParts.map(part => {
                    if (part === '☐' || part === '☑') {
                        const isChecked = part === '☑';
                        return `<input type="checkbox" class="editable-checkbox-symbol" ${isChecked ? 'checked' : ''}>`;
                    } else {
                        return `<span style="${runStyle}">${formatRunText(part)}</span>`;
                    }
                }).join('');
            }
            return `<span style="${runStyle}">${formatRunText(run.Text || '')}</span>`;
        };
        documentData.json.Elements.forEach(element => {
            if (!element || !element.Type) return;
            let elementHtml = '';
            switch (element.Type) {
                case "Paragraph": {
                    const paragraphDirectionPref = resolveDirectionPreference(element.Formatting, element);
                    const paragraphDirectionEffective = (paragraphDirectionPref && paragraphDirectionPref !== 'inherit')
                        ? paragraphDirectionPref
                        : documentDirection;
                    const paragraphAlignment = resolveAlignment(paragraphDirectionEffective, element.Formatting, element);
                    const paragraphDirection = paragraphDirectionPref || 'inherit';
                    let style = `text-align: ${paragraphAlignment || 'inherit'}; direction: ${paragraphDirection};`;
                    if (element.Formatting?.Shading) style += `background-color: #${element.Formatting.Shading};`;
                    let content = (element.Content || []).map((item, index) => renderRun(item, element.ID, index)).join('');
                    elementHtml = `<div class="editable-paragraph" data-element-id="${element.ID}" style="${style}" contenteditable="true">${content || '&nbsp;'}</div>`;
                    break;
                }
                case "Table": {
                    const explicitTableDirection = normalizeDirectionValue(element?.Borders?.Direction ?? element?.Direction);
                    const tableDirectionFallback = explicitTableDirection || documentDirection;
                    const tableDirectionEffective = computeDominantTableDirection(element, tableDirectionFallback) || tableDirectionFallback;
                    const tableBorderStyles = computeBorderStyles(element.Borders);
                    let tableStyle = `${tableBorderStyles.css} direction: ${tableDirectionEffective || documentDirection}; width: 100%; border-collapse: collapse; table-layout: fixed;`;

                    let tableBody = (element.Content || []).map((row, rIdx) => {
                        const rowDirectionPref = resolveDirectionPreference(row);
                        const rowDirectionEffective = (rowDirectionPref && rowDirectionPref !== 'inherit')
                            ? rowDirectionPref
                            : (tableDirectionEffective || documentDirection);
                        const rowBorderStyles = computeBorderStyles(row?.Borders, tableBorderStyles.values);
                        const rowStyle = `${rowBorderStyles.css} direction: ${rowDirectionEffective};`;
                        let cellsHtml = (row.Cells || []).map((cell, cIdx) => {
                            if (cell.VerticalMerge === 'Continue') return '';
                            const cellDirectionPref = resolveDirectionPreference(cell);
                            let cellDirectionEffective = (cellDirectionPref && cellDirectionPref !== 'inherit')
                                ? cellDirectionPref
                                : rowDirectionEffective;
                            if (!cellDirectionEffective) cellDirectionEffective = tableDirectionEffective || documentDirection;
                            const cellBorderStyles = computeBorderStyles(cell?.Borders, rowBorderStyles.values);
                            const cellAlignment = resolveAlignment(
                                cellDirectionEffective,
                                cell,
                                row,
                                row?.Formatting,
                                element,
                                element.Formatting,
                                element.Borders
                            ) || (cellDirectionEffective === 'rtl' ? 'right' : 'left');
                            const backgroundColor = cell.Borders?.Background;
                            const backgroundStyle = (backgroundColor && backgroundColor !== 'auto' && backgroundColor !== 'inherit')
                                ? `background-color: #${backgroundColor};`
                                : '';
                            const cellStyleParts = [
                                `direction:${cellDirectionEffective};`,
                                `text-align:${cellAlignment} !important;`,
                                'vertical-align: middle;',
                                'line-height: 1.3;',
                                'word-break: break-word;',
                                'white-space: normal;',
                                'padding: 6px;',
                                cellBorderStyles.css,
                                backgroundStyle
                            ];
                            if (cell.TextRotation) {
                                cellStyleParts.push('writing-mode: vertical-rl; transform: rotate(180deg);');
                            }
                            const cellStyle = cellStyleParts.filter(Boolean).join(' ');
                            let cellContent = (cell.FormattedRuns || []).map((run, runIdx) => renderRun(run, `${element.ID}-${rIdx}-${cIdx}`, runIdx)).join('');
                            if (!cellContent && typeof cell.Content === 'string') {
                                cellContent = formatRunText(cell.Content);
                            }
                            return `<td class="editable-cell" ${cell.GridSpan > 1 ? `colspan="${cell.GridSpan}"` : ''} ${cell.rowSpan > 1 ? `rowspan="${cell.rowSpan}"` : ''} style="${cellStyle}" data-element-id="${element.ID}" data-row-index="${rIdx}" data-cell-index="${cIdx}" contenteditable="true">${cellContent || '&nbsp;'}</td>`;
                        }).join('');
                        const rowStyleString = rowStyle.trim() || 'border: inherit;';
                        return `<tr style="${rowStyleString}">${cellsHtml}</tr>`;
                    }).join('');
                    elementHtml = `<table class="modern-table" style="${tableStyle}"><tbody>${tableBody}</tbody></table>`;
