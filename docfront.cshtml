                $.post("../../r/j", { tb: "DC_Documents_records_number", tbtype: "view", cols: "ID", parm: `('${currentDocId}','${docNum}')` })
                 .done(data => { if(data?.[0]?.ID) loadSavedRecord(data[0].ID); else alert(t.errorNotFound); })
                 .fail(()=> alert(t.errorLoading));
            }
        });
